            data-amount="1800000"
            data-name="E-Bus"
            data-description="Proceed to Buy Bus Pass"
            data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
            data-locale="auto"
            data-currency="inr"
           

        >
            
        </script>
    </form>
    </div>
    </center>
    
</body>
</html>